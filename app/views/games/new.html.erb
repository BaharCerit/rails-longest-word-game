<h1>New Game</h1>
<h2>********* Welcome to the longest word-game! *********</h2>
<h3>Here is your grid</h3>
  <% @letters.each do |letter| %>
    <%= letter.capitalize %>
  <% end %>
<h2>*****************************************************</h2>

<h3>What is your longest word?</h3>
<form action="/score" method="post" data-turbo="false">
  <input type="text" name="longestsword">
  <input type="submit" value="play!">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <% @letters.each do |letter| %>
    <%= hidden_field_tag "letters[]", letter.downcase %>
  <% end %>
</form>
